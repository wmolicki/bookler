{{- /*gotype: github.com/wmolicki/bookler/handlers.AuthorListViewModel*/ -}}
{{ define "yield"}}
  <h1>Authors</h1>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name </th>
      <th>Books</th>
    </tr>
    </thead>
    <tbody>
    {{ range .Authors }}
      <tr>
        <td><a href="/authors/{{.ID}}">{{.ID}}</a></td>
        <td>{{.Name}}</td>
        <td>{{.BookCount}}</td>
      </tr>
    {{end}}
    </tbody>
  </table>
{{end}}